# Server Configuration
NODE_ENV=development
PORT=3000
DB_PATH=data/database.sqlite
API_URL=http://localhost:3000

# Security
# JWT secret (384-bit for HMAC-SHA384)
JWT_SECRET=development_jwt_secret_replace_in_production_384bits_base64

# Encryption key (256-bit for AES-256-CBC)
ENCRYPTION_KEY=development_encryption_key_replace_in_production_256bits_hex

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# GitHub Integration
GITHUB_REPO=bradenatrhythmcs/homehub
GITHUB_BRANCH=main
GITHUB_TOKEN=

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/server.log
